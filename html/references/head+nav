  <script>
    function toggle() {
      var x = document.getElementById("navbar");
      if (!x.classList.contains("responsive")) {
        x.className += " responsive";
      } else {
        x.classList.remove("responsive");
      }
    } 
  </script>

  <ul id="navbar" class="sticky top-0 z-50 topnav md:flex sm:flex-column w-full py-4 md:py-0 px-4 bg-white border-b"> <!--  py-4 md:py-0 -->
